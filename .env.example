# Pterodactyl Telegram Bot + Rose Bot Features Configuration
# Copy this file to .env and fill in your values

# Essential Configuration
BOT_TOKEN=your_telegram_bot_token
OWNER_TELEGRAM_ID=5476148500

# Pterodactyl Panel Configuration
PTERODACTYL_PANEL_URL=https://panel.yourdomain.com
PTERODACTYL_APPLICATION_API_KEY=ptla_your_application_api_key_here
PTERODACTYL_CLIENT_API_KEY=ptlc_your_client_api_key_here

# Optional: Database Configuration (for production use)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=pterodactyl_bot
# DB_USER=pterodactyl_bot
# DB_PASS=your_password_here

# Optional: Redis Configuration (for caching)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Optional: Logging Configuration
LOG_LEVEL=INFO
DEBUG_MODE=false
# LOG_FILE=bot.log

# Optional: Rose Bot Configuration
# MAX_WARNINGS=3
# DEFAULT_BAN_TIME=1d
# DEFAULT_MUTE_TIME=1h
# ANTIFLOOD_LIMIT=5
# ANTIFLOOD_TIME=10

# Optional: Welcome Configuration
# DEFAULT_WELCOME_MESSAGE=Selamat datang {mention} di {chatname}!
# DEFAULT_GOODBYE_MESSAGE=Sampai jumpa {fullname}!

# Optional: Security Configuration
# ENABLE_LOGS=true
# LOG_CHANNEL_ID=-1001234567890
# ADMIN_ONLY_COMMANDS=true

# Author Information
AUTHOR_NAME=Pablos
AUTHOR_TELEGRAM=@ImTamaa
# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here
OWNER_TELEGRAM_ID=your_telegram_user_id_here

# Pterodactyl Panel Configuration
PTERODACTYL_PANEL_URL=https://panel.yourdomain.com
PTERODACTYL_APPLICATION_API_KEY=ptla_your_application_api_key_here
PTERODACTYL_CLIENT_API_KEY=ptlc_your_client_api_key_here

# Custom Volume Path (Optional - Bot will auto-detect if not specified)
PTERODACTYL_VOLUMES_PATH=/var/lib/pterodactyl/volumes

# External Panel Configuration (Optional - for copy creds feature)
EXTERNAL_PANEL_DOMAIN=https://external-panel.com
EXTERNAL_PANEL_PLTA=ptla_external_application_key
EXTERNAL_PANEL_PLTC=ptlc_external_client_key
EXTERNAL_PANEL_LOC=1
EXTERNAL_PANEL_EGGS=15

# Security Configuration
PANEL_BLACKLIST=panel-blocked.com,another-blocked.com